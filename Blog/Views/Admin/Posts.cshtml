@{
    Layout = "/Views/Shared/_LayoutvanGogh3.cshtml";
}

@model List<Post>

<div class="container">
    <div class="center-card">
        <div class="card">
            <div class="card-header">
                Postlar
            </div>
            <div class="card-body">
                <table class="table table-hovered table-bordered">
                    <thead>
                        <tr>
                            <th>Post ID</th>
                            <th>Post Adı</th>
                            <th>Post Kategorisi</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model)
                        {
                            <tr>
                                <th>@post.PostID</th>
                                <th>@post.PostName</th>
                                <th>@post.CategoryPost.CategoryName</th>
                                <th><button style="background-color:forestgreen;"><a href="/Post/UpdatePost/@post.PostID" style="text-decoration:none; color:white;">Güncelle</a></button></th>
                                <th><button style="background-color:darkred;"><a href="/Post/Delete/@post.PostID" style="text-decoration:none; color:white;">Sil</a></button></th>
                            </tr>
                        }
                    </tbody>
                </table>
                <form asp-controller="Post" asp-action="NewPost" method="get">
                    <button>Yeni Post</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
        margin-top: 30px;
        opacity: 0.95;
    }

    .center-card {
        display: flex;
        align-items: center;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 800px;
        overflow: hidden;
    }

    .card-header {
        background-color: #b6c213;
        color: #fff;
        padding: 10px;
        text-align: center;
    }

    .card-body {
        padding: 20px;
    }
</style>